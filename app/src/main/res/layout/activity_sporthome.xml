<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation ="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.perlmutter.storedata.SportHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/SportName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sport Name"
            android:textSize="25sp" />

        <Button
            android:background="#47bef9"
            android:id="@+id/AddData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toStoreData"
            android:text="Add Data" />

        <Button
            android:background="#fffc4e"
            android:id="@+id/SeeProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toViewData"
            android:text="See Progress" />

        <Button
            android:background="#f96062"
            android:id="@+id/EditData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClick"
            android:text="Edit Data" />

        <Button
            android:background="#c291f7"

            android:id="@+id/homeSportHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toHomeScreen"
            android:text="Create New Sport" />

    </LinearLayout>

</LinearLayout>
