<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.perlmutter.storedata.SportStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a New Sport"
            android:textAlignment="center"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Time"
                android:layout_width="206dp"
                android:layout_height="225dp"

                android:background="#1d7e47"
                android:onClick="toSportHome"
                android:text="Time-based"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Distance"
                android:layout_width="206dp"
                android:layout_height="225dp"
                android:background="#44be1c"
                android:onClick="toSportHome"
                android:text="Distance-based"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <Button
                android:id="@+id/Point"
                android:layout_width="206dp"
                android:layout_height="225dp"

                android:background="#0bf52b"
                android:onClick="toSportHome"
                android:text="point-based"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Accuracy"
                android:layout_width="206dp"
                android:layout_height="225dp"
                android:background="#60f99b"
                android:onClick="toSportHome"
                android:text="accuracy-based"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
