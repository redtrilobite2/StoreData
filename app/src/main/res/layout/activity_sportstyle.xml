<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.perlmutter.storedata.SportStyle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a New Sport"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/timeBased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toCreateSport"
        android:text="Time-based"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="93dp" />

    <Button
        android:id="@+id/distanceBased"
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:text="Distance-based"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/pointBased"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:text="point-based"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="284dp" />

    <Button
        android:id="@+id/accuracyBased"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:text="accuracy-based"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="385dp" />

</LinearLayout>

